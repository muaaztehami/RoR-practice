<%= form_with(model: @article, html: {multipart: true}, local: true) do |form| %>
    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@article.errors.count, "error") %>
          : article not saved!
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>
   
    <p>
      <%= form.label :text %><br>
      <%= form.text_area :text %>
    </p>
    
    <p>
      <%= form.label :tag_list %><br/>
      <%= form.text_field :tag_list %>
    </p>

    <p>
      <% if @article.image.exists? %>
        <%= image_tag @article.image.url(:medium) %><br/>
      <% end %>
      <%= form.label :image, "Attach a New Image" %><br/>
      <%= form.file_field :image %>
    </p>

    <p>
      <%= form.submit %>
    </p>
<% end %>
